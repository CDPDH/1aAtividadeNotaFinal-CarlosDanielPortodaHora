<body class="body">
  <div class="box-model">
    <h1 class="title">Calculadora de IMC</h1>

    <input class="input" id="peso" placeholder="Peso (kg)">
    <input class="input" id="altura" placeholder="Altura (m)">

    <button class="button" onclick="calcular()">Calcular IMC</button>

    <p id="res" class="resultado"></p>

    <p class="text">IMC = peso / (altura Ã— altura)</p>
  </div>

  <script>
    function calcular() {
      let pesoDigitado = document.getElementById("peso").value;
      let alturaDigitada = document.getElementById("altura").value;

      let peso = Number(pesoDigitado);
      let altura = Number(alturaDigitada);

      let imc = peso / (altura * altura);

      let mensagem = "";

      if (imc < 18.5) {
        mensagem = "Abaixo do peso";
      } else if (imc < 25) {
        mensagem = "Peso normal";
      } else if (imc < 30) {
        mensagem = "Sobrepeso";
      } else {
        mensagem = "Obesidade";
      }

      document.getElementById("res").innerHTML = "IMC: " + imc.toFixed(2) + " - " + mensagem;
    }
  </script>
