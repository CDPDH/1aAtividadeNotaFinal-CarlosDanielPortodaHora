<body class="body">
  <div class="box-model">
    <h1 class="title">Mudar Cor de Fundo</h1>

    <p class="text">Clique para trocar a cor da p√°gina.</p>

    <button class="button" onclick="mudarCor()">Mudar Cor</button>
  </div>

  <script>
    let cores = ['#f2f1fa', '#e7d8ff', '#ffd6e7', '#e6ffe6', '#e0ebff'];
    let indice = 0;

    function mudarCor() {
      let corAtual = cores[indice];
      document.body.style.backgroundColor = corAtual;

      if (indice < cores.length - 1) {
        indice = indice + 1;
      } else {
        indice = 0;
      }
    }
  </script>
