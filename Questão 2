<body class="body">
  <div class="box-model">
    <h1 class="title">Soma dos Numeros</h1>

    <input class="input" id="n1" placeholder="Primeiro número">
    <input class="input" id="n2" placeholder="Segundo número">

    <button class="button" onclick="somar()">Somar</button>

    <p id="res" class="resultado"></p>
  </div>

  <script>
    function somar() {
      let n1 = document.getElementById("n1").value;
      let n2 = document.getElementById("n2").value;

      let numero1 = Number(n1);
      let numero2 = Number(n2);

      let resultado = numero1 + numero2;

      if (n1 == "" || n2 == "") {
        document.getElementById("res").innerHTML = "Preencha os dois números!";
      } else {
        document.getElementById("res").innerHTML = "Resultado: " + resultado;
      }
    }
  </script>
</body>
